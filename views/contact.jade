extends layout

block content
  h2 Contact Form
  form.form(method='post' action='contact/send')
    .form-group
      label(for='name') Name
      input.form-control(id='name', type="text", name='name', placeholder='Enter your name')
    .form-group
      label(for='email') Email
      input.form-control(id='email', type="email", name='email', placeholder='Enter your email')
    .form-group
      label(for='message') Message
      textarea.form-control(id='message', name='message', placeholder='Enter your message')
    button.btn.btn-default(type='submit') Submit
